extends layout

block content
  div(id="toolbar", class = 'draggable', style="background-color:#000f; width:100%; height:24px")
    button(id="close", class="toolbarButton")
    button(id="minimize", class="toolbarButton")
    button(id="HideOverlays") Hide Overlays
  div(class="Sidebar",  style="background-color: #111f")
    button(class="SidebarButton", id="fuelCalculator") Fuel Calculator
    button(class="SidebarButton", id="relative") Relative 
    button(class="SidebarButton", id="InputDisplay") Input Display
    button(class="SidebarButton", id="InputTelemetry") Input Telemetry
    button(class="SidebarButton", id="Standings") Standings
    button(class="SidebarButton", id="GlobalSettings") Global Settings
  div(id="settingsDiv",  style="background-color: #222f;")
    iframe(src="", frameborder="0", style="width:100%; height:100%;", id="settingsFrame")
  script(src='/javascripts/index.js')
  

  